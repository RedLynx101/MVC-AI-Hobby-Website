
@{
    ViewData["Title"] = "Chat and Calculator";
}
<br /><br /><br />
<body>
    <iframe src="https://www.chatbase.co/chatbot-iframe/9foY4Sjrr277XeoLzEb1a"
            width="100%"
            style="height: 100%; min-height: 600px"
            frameborder="0">
    </iframe>


    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Calculator for Noah to help you learn about AI</h1>
                        <form class="mt-4">
                            <div class="mb-3">
                                <label for="hours" class="form-label">Number of Hours:</label>
                                <input type="number" class="form-control" id="hours" name="hours">
                            </div>
                            <div class="mb-3">
                                <label for="rate" class="form-label">Hourly Rate:</label>
                                <input type="text" class="form-control" id="rate" name="rate" value="20" readonly>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="button" id="calculate" class="btn btn-primary">Calculate</button>
                            </div>
                            <div class="mb-3">
                                <label for="total" class="form-label">Total Charge:</label>
                                <input type="text" class="form-control" id="total" name="total" readonly>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        document.getElementById("calculate").addEventListener("click", function () {
            var hours = document.getElementById("hours").value;
            var rate = document.getElementById("rate").value;
            var total = hours * rate;
            if (hours <= 0) {
                alert("Please enter a valid number of hours");
                return;
            }
            document.getElementById("total").value = total;
        });
    </script>
</body>

